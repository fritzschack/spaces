<%= render "./components/navbar" %>
<div class="container">
  <% if @spaces.count == 0 %>
    <p>There are currently no space(s) available!</p>
  <% end %>

  <% counter = 1 %>
  <% @spaces.each do |space| %>
    <% counter += 1 %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://source.unsplash.com/featured/?coworking/<%= counter %>');">
        <div class="card-name">
          <h2><%= space.name %></h2>
        </div>
        <div class="card-description">
          <p>$<%= space.price_per_day %> per day | <%= space.address %></p>
        </div>
        <img class="card-user" src="">
        <%= link_to "", space_path(space), :class => "card_link"  %>
      </div>
    </div>
  <% end %>

  <%#= link_to "Create new space", new_space_path, :class => "btn btn-primary button" %>
</div>
