<%= render "./components/navbar" %>
<div class="container">

  <% @space.photos.each do |p| %>
    <%= cl_image_tag p.image_url, height: 300 %>
  <% end %>

  <h1><%= @space.name %></h1>
  <h3>$<%= @space.price_per_day %></h3>
  <h4><%= @space.phone %> | <%= link_to "Website", "https://#{@space.website}/", target: :_blank %></h4>
  <h5><%= @space.description %></h5>
  <%= link_to "Book this space", new_space_booking_path(@space), :class => "btn btn-primary button"%>
  <br>
  <h3>Location:</h3>
</div>

<div
  class="map"
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container">


</div>



