<%= render "./components/navbar" %>

<div class="flex-container">
  <h1><%= @space.name %></h1>
  <%= link_to "Book this space", new_space_booking_path(@space), :class => "btn btn-primary button",:style => "margin-top: 31px;"%>
</div>

<%= render "./components/gallery" %>

<div class="container" style="position:relative; margin-top: 90px; margin-bottom: 40px;">
  <h3>$<%= @space.price_per_day %> Per Day</h3>
  <%= link_to profile_path(@hosted_by.id) do %>
    <div class="hosted_by_card">
      <%= cl_image_tag @hosted_by.profile_picture, height: 100, width: 100, crop: :fill, :class => 'hosted-by-image' %>
      <small>Hosted by: <%= @hosted_by.first_name %> <%= @hosted_by.last_name %></small>
  <% end %>
  </div>
  <button type="button" class="btn btn-secondary contact-me-button">Contact Me</button>
  <br>
  <h5>Description:</h5>
  <h5 class="space-description"><%= @space.description %></h5>
  <br>

  <div
    class="map"
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>
