<%= render "./components/navbar" %>
<div class="container">
  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :description %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Delete Account", user_path(@user.id), :method => "delete", :class => "btn btn-danger" %>
</div>
