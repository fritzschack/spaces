<% if notice %>
  <div class="alert alert-info alert-dismissible" role="alert" style="position: absolute; bottom: 20px; left: 20px; width: 25%; border: none;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible" role="alert" style="position: absolute; bottom: 20px;left: 20px; width: 25%; border: none;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>
