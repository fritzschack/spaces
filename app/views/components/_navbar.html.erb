<div class="navbar">
  <a href="/" class="navbar-brand">
    <i class="fas fa-user-astronaut"></i>
    <div class="navbar-logo-text">spacehub</div>
  </a>

  <div class="navbar-right hidden-xs hidden-sm">
    <% if user_signed_in?  %>
      <%= link_to "Add A Space", new_space_path, :class => 'btn btn-primary add-space-button' %>
    <% end %>
    <div class="navbar-item">
      <div class="dropdown">
          <% if user_signed_in? %>
            <p class="avatar dropdown-toggle" id="navbar-menu" data-toggle="dropdown">
              <% if current_user.profile_picture.nil? %>
                <i class="fas fa-user"></i>
              <% else %>
                <%= cl_image_tag current_user.profile_picture, height: 50, width: 50, crop: :fill, :style => 'border-radius:50%;' %>
              <% end %>
            </p>
            <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li><%= link_to "My Profile", my_profile_path %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            </ul>
          <% else %>
            <%= link_to "Login", new_user_session_path, :class => "navbar-item navbar-link" %>
            <%= link_to "Create Account", new_user_registration_path, :class => "navbar-item navbar-link" %>
          <% end %>
      </div>
    </div>
  </div>


  <div class="navbar-item hidden-md hidden-lg">
    <% if user_signed_in?  %>
      <%= link_to "Add A Space", new_space_path, :class => 'btn btn-primary add-space-button-small' %>
    <% end %>
    <div class="dropdown-small">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button" style="color: white;"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <% if user_signed_in? %>
          <li><%= link_to "My Profile", my_profile_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path, :class => "navbar-home-item navbar-home-link" %></li>
          <li><%= link_to "Create Account", new_user_registration_path, :class => "navbar-home-item navbar-home-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
